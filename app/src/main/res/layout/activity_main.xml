<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.clementvacandard.banqueimages.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@android:color/darker_gray"
        android:id="@+id/imageView"
        android:adjustViewBounds="false"
        android:layout_below="@+id/rechercher_btn"
        android:layout_alignParentStart="true"
        android:layout_marginTop="72dp" />

    <TextView
        android:text="Index de l'image :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignBaseline="@+id/rechercher_btn"
        android:layout_alignBottom="@+id/rechercher_btn"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/index_lst"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignEnd="@+id/dispo_cb" />

    <CheckBox
        android:text="Disponibles uniquement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dispo_cb"
        android:layout_below="@+id/rechercher_btn"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp" />

    <Button
        android:text="Afficher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rechercher_btn"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/vider_btn" />

    <Button
        android:text="Vider le cache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vider_btn"
        android:layout_below="@+id/rechercher_btn"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
